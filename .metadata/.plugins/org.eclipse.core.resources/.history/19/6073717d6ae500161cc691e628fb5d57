package controller.commands;

import java.io.OutputStream;

import controller.server.MyServer;
import model.Model;
import model.receivers.display.DisplayLevel;

public class DisplayCommand implements Command {

	/**
	 * This class using an OutputStream to print the level's data.
	 * in our case, this class uses OutputStream called outToClient in this code, to send the stream
	 * to the client terminal.
	 * 
	 */
	
	DisplayLevel displayer;
	//OutputStream out; 
	Model model;
	MyServer server;
	
//	public void setLevelToDisplay(Model model) { displayer = new DisplayLevel(model.getLevel(),out); }
	
	public DisplayCommand(Model model, MyServer server) { 
		this.model = model;
		this.server = server;
	}

	@Override
	public void execute() {
		OutputStream out = server.getCH().getOutputStream();
		displayer = new DisplayLevel(model.getLevel(),out);
		displayer.display(out);
	}

	@Override
	public void setParams(String[] params) {}

}
