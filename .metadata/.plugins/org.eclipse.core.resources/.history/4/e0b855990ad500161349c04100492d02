package components;


public class Player extends component {
	
	//private static int score = 0 ;
	
	
	public Player(int x, int y) {
		super(x, y);
	}

    public boolean isLeftCollision(Player player) {
        if (((this.get_x() - ) == player.get_x()) &&
            (this.get_y() == player.get_y())) {
            return true;
        } else {
            return false;
        }
    }

    public boolean isRightCollision(Player player) {
        if (((this.get_x() + ) == player.get_x())
                && (this.get_y() == player.get_y())) {
            return true;
        } else {
            return false;
        }
    }

    public boolean isTopCollision(Player player) {
        if (((this.get_y() - ) == player.get_y()) &&
            (this.get_x() == player.get_x())) {
            return true;
        } else {
            return false;
        }
    }

    public boolean isBottomCollision(Player player) {
        if (((this.get_y() + ) == player.get_y())
                && (this.get_x() == player.get_x())) {
            return true;
        } else {
            return false;
        }
    }
}



